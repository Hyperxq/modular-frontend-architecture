{
  "name": "modular-frontend-architecture",
  "type": "module",
  "private": false,
  "keywords": ["react", "micro-frontend", "module federation", "nx", "rspack"],
  "scripts": {
    "dev": "nx run web:dev",
    "dev:mock": "nx run web:mock",
    "test": "rstest",

    "build":"nx run build",
    "build:prod": "nx run web:build --configuration=production",
    "build:wc": "nx run web:build-wc",
    "lint": "nx run-many --target=lint --all --exclude=web",
    "lint:fix": "nx run-many --target=lint:fix --all --exclude=web",
    "format": "nx run-many --target=format --all --exclude=web",
    "format:fix": "nx run-many --target=format:fix --all --exclude=web"
  },
  "workspaces": [
    "packages/**",
    "packages/libraries/**"
  ],
  "dependencies": {
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@nx/js": "22.3.3",
    "@rsbuild/plugin-preact": "1.6.0",
    "@rsbuild/plugin-sass": "1.4.0",
    "@rstest/core": "0.7.7",
    "@tailwindcss/cli": "4.1.18",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/preact": "3.2.4",
    "jsdom": "27.4.0",
    "lefthook": "2.0.13",
    "msw": "2.12.7",
    "nx": "22.3.3",
    "postcss-loader": "8.2.0",
    "postcss": "8.5.6",
    "tailwind-merge": "3.4.0",
    "typescript": "5.9.3"
  }
}