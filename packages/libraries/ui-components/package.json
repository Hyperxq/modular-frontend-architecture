{
	"name": "@modular-frontend/ui-components",
	"version": "1.0.0",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.mjs"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "rslib mf-dev --env-mode development.local",
		"mock": "rslib mf-dev --env-mode mock --env-mode development.local",
		"inspect": "rslib inspect --verbose",
		"build:watch": "rslib build --watch --env-mode development.local",
		"build:storybook": "storybook build --env-mode development.local",
		"storybook": "set STORYBOOK_MODE=true && storybook dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"test": "rstest",

		"/* --- Base build ---*/": "",
		"build": "rslib build",
		"build:wc": "rslib build --config rslib.config.wc.ts",
		"build:dev": "cross-env rslib build --env-mode development",
		"build:prod": "cross-env rslib build --env-mode qa",

		"/* --- Target: Local ---*/": "",
		"build:l1": "cross-env LEVEL_MODE=1 rslib build --env-mode development",
		"build:l2": "cross-env LEVEL_MODE=2 rslib build --env-mode development",
		"build:l3": "cross-env LEVEL_MODE=3 rslib build --env-mode development",

		"/* --- Target: PROD ---*/": "",
		"build:l1:prod": "cross-env LEVEL_MODE=1 rslib build --env-mode production",
		"build:l2:prod": "cross-env LEVEL_MODE=2 rslib build --env-mode production",
		"build:l3:prod": "cross-env LEVEL_MODE=3 rslib build --env-mode production"
	},
	"devDependencies": {
		"@r2wc/react-to-web-component": "2.1.0",
		"@module-federation/rsbuild-plugin": "0.15.0",
		"@rsbuild/plugin-react": "^1.4.1",
		"@rslib/core": "^0.17.1",
		"@rstest/core": "^0.5.4",
		"@storybook/addon-docs": "10.1.0",
		"@storybook/react": "10.1.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"fast-glob": "^3.3.3",
		"storybook-addon-rslib": "2.1.6",
		"storybook-builder-rsbuild": "3.1.0",
		"storybook": "10.1.11",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"class-variance-authority": "^0.7.1",
		"shadcn": "3.5.0",
		"clsx": "^2.1.1",
		"lucide-react": "^0.553.0",
		"react-hook-form": "^7.68.0",
		"zod": "4.3.4"
	},
	"peerDependencies": {
		"preact": "^10.0.0"
	},
	"private": true
}
